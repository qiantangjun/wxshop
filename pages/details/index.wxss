/* pages/details/index.wxss */

.container {
  margin: 0;
  padding: 0;
}

.swiper {
  width: 750rpx;
  height: 825rpx;
}

.count {
  color: #ff6700;
  font-size: 28rpx;
}

.details {
  padding-bottom: 100rpx;
}
.ctil{font-size:32rpx;line-height:1.5}
.protitle {
  padding: 10rpx;
}

#content-tab image {
  width: 100%;
}

.protitle .bigtil {
  font-size: 40rpx;
  display: block;
}

.protitle .smalltitle {
  font-size: 30rpx;
  color: #666;
  line-height: 30rpx;
}

.protitle .price {
  color: #ff6700;
  font-size: 36rpx;
  display: block;
}

.protitle  .htit {
  font-size: 30rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 15rpx;
}

.chosebox {
  padding: 10rpx 5rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.chosebox .ctil {
  display: block;
  font-size: 32rpx;
  line-height: 36rpx;
  color: #666;
  padding-bottom: 6rpx;
}

.chose {
  padding-top: 12rpx;
  overflow: hidden;
}

.chose view {
  float: left;
  padding: 10rpx 20rpx;
  margin-right: 12rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
}

.chose .ck {
  background: #f37d6a;
  color: #fff;
}

.procontent {
  padding-top: 15rpx;
}

.protab {
  display: -webkit-flex;
  display: flex;
  position: relative;
}

.protab .swiper-tab-item {
  -webkit-box-flex: 1;
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
}

.protab::before {
  display: block;
  content: '';
  width: 2rpx;
  height: 40rpx;
  background: #f5f5f5;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.protab .active {
  color: #f37d6a;
}

.table .tr {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.table .td {
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #f5f5f5;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.table .left {
  width: 222rpx;
}

.table .right {
  width: 503rpx;
}

.detailsbuy {
  display: flex;
  display: -webkit-flex;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
  z-index:12
}

.detailsbuy .item2, .detailsbuy .item3 {
  -webkit-flex: 4;
  flex: 4;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
}

.detailsbuy .item {
  position:relative;
  flex: 2;
  background: url(data:image/png;base64,) no-repeat center center;
  background-size: 55rpx auto;
}
.detailsbuy .carnum{display:block;width:40rpx;height:40rpx;text-align:center;line-height:40rpx;
background:#ff0000;color:#fff;font-size:24rpx;-webkit-border-radius:50%;border-radius:50%;position:absolute;right:20rpx;top:10rpx}
.detailsbuy .item2 {
  background: #f5f5f5;
}

.detailsbuy .item3 {
  background: #f37d6a;
  color: #fff;
}

.numbox {
  padding-top: 10rpx;
  overflow: hidden;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.numbox text {
  float: left;
  line-height: 60rpx;
  font-size: 30rpx;
}

.numbox .xm-input-number {
  border: 1rpx solid #eee;
  width: 227rpx;
  float: right;
}

.numbox .input-sub, .numbox .input-add {
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  width: 60rpx;
  text-align: center;
  background: #fafafa;
}

.numbox .inout-num {
  width: 107rpx;
  float: left;
  height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

.swiper-box {
  display: block;
  height: 100%;
}
