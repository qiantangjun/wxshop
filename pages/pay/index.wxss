/* pages/pay/index.wxss */
.addlist{height:70rpx;line-height:70rpx;padding-left:15rpx;font-size:32rpx}
.addlist text{font-size:26rpx;color:#888}
.userpayt {
  display: block;
  line-height: 70rpx;
  font-size: 32rpx;
  padding-left: 15rpx;
}

.order-det {
  width: 720rpx;
  padding: 15rpx;
  position: relative;
  border-bottom: 5px solid #f5f5f5;
  border-top: 5px solid #f5f5f5;
}

.order-det image {
  width: 80rpx;
  height: 80rpx;
}

.orderpro {
  position: absolute;
  left: 130rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  font-size: 30rpx;
  width:440rpx;
}

.orderpro text {
  display: block;
  line-height: 1.5;
  overflow: hidden;/*内容超出后隐藏*/
text-overflow: ellipsis;/* 超出内容显示为省略号*/
white-space: nowrap;/*文本不进行换行*/
}

.orderpro  .payprice {
  position: absolute;
  right:-100rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #ff6700;
}

.orderaddress {
  border-bottom: 5px solid #f5f5f5;
}

.orderaddress .tetx {
  line-height: 70rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #f5f5f5;
  padding-left: 15rpx;
  display: block;
}

.addressinfo {
  width: 720rpx;
  padding: 15rpx;
  position: relative;
}

.addressinfo text {
  display: block;
  font-size: 30rpx;
  line-height: 1.5;
}

.addressinfo .icon {
  content: "";
  position: absolute;
  right: 12rpx;
  top: 50%;
  width: 16rpx;
  height: 12rpx;
  border-left: 1px solid currentColor;
  border-top: 1px solid currentColor;
  transform: translate3d(0, -50%, 0) rotate(135deg);
  -webkit-transform: translate3d(0, -50%, 0) rotate(135deg);
  opacity: 0.5;
}

.ord {
  padding-top: 10rpx;
}

.order-price {
  padding-bottom: 100rpx;
}

.bigprice {
  border-bottom: 1px solid #f5f5f5;
  overflow: hidden;
  width: 720rpx;
  padding: 0 15rpx;
}

.bigprice text {
  font-size: 30rpx;
  line-height: 80rpx;
}

.bigprice .left {
  float: left;
}

.bigprice .right {
  float: right;
  color: #ff6700;
}

.paybtn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #62b900;
}

.pat3 {
  background: #999;
  color: #fff;
}
