/* pages/user/order/index.wxss */

.swiper-box {
  width: 100%;
}
.orderlength{width:100%}
.order-itembox {
  width: 100%;
}

.swiper-tab {
  width: 100%;
  display: -webkit-flex;
  display: flex;
  border-bottom: 7px solid #f5f5f5;
}

.swiper-tab .swiper-tab-item {
  -webkit-box-flex: 1;
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
   position:relative;
}

.swiper-tab  .active {
  color: #f37d6a;

}
.swiper-tab  .active::after{
  display:block;
  content:'';
  width:100%;
  height:4rpx;
  background:#f37d6a;
  position:absolute;
  bottom:0;
}
.order-item {
  border-bottom: 4px solid #f5f5f5;
  padding: 20rpx;
}

.order-data {
  position: relative;
}

.order-data text {
  display: block;
  line-height: 1.5;
  font-size: 30rpx;
}

.ordernum {
  color: #999;
}

.orderid {
  position: absolute;
  color: #f37d6a;
  font-style: normal;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
}

.order-det {
  margin-top: 20rpx;
  position: relative;
}

.order-det image {
  width: 80rpx;
  height: 80rpx;
}

.det-ti {
  font-size: 32rpx;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  position: absolute;
  left: 100rpx;
  top: 50%;
  color: #666;
  line-height: 2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.orderprice {
  text-align: right;
  color: #777;
  margin-top: 20rpx;
  font-size: 32rpx;
}

.order-pay {
  margin-top: 20rpx;
  overflow: hidden;
}

.order-pay .item {
  display: block;
  float: right;
  width: 25%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  margin-left: 15rpx;
  -webkit-border-adius: 2px;
  border-radius: 2px;
}

.order-pay .left {
  background: #f37d6a;
  color: #fff;
}

.order-pay .right {
  background: #f3f3f3;
  color: #333;
}

.emptynone {
  font-size: 32rpx;
  text-align: center;
  color: #999;
  margin: 80rpx 100rpx 0;
  width:100%;
  padding-top: 250rpx;
  background: url(data:image/png;base64,) no-repeat 50% 0;
  background-size: 200rpx 200rpx;
}
.goindex{width:60%;height:70rpx;line-height:70rpx;text-align:center;background:#f37d6a;color:#fff;margin:30rpx auto 0 auto}
