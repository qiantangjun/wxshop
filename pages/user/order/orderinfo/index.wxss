/* pages/user/order/orderinfo/index.wxss */

.order-data {
  padding: 30rpx 15rpx;
  border-bottom: 5px solid #f5f5f5;
  text-align: left;
  font-size: 30rpx;
  position: relative;
  width: 720rpx;
}

.order-data text {
  display: block;
  font-size: 30rpx;
}

.orderid {
  position: absolute;
  right: 10rpx;
  top: 50%;
  -webkit-transform: translateY(-80%);
  transform: translateY(-80%);
  font-size: 28rpx;
  line-height: 1;
}

.order-data .telphone {
  position: absolute;
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  right: 15rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  border: 2rpx solid #f2f2f2;
}

.order-view {
  width: 720rpx;
  padding: 20rpx 15rpx;
  border-bottom: 5px solid #f5f5f5;
}

.order-don {
  display: -webkit-flex;
  display: flex;
}

.order-don .item {
  -webkit-flex: 1;
  flex: 1;
  margin-right: 2px;
  text-align: center;
}

.order-don .itmtop {
  display: block;
  text-align: center;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #0c6;
  color: #fff;
  font-size: 30rpx;
}

.order-don .itembom {
  font-size: 28rpx;
  line-height: 2;
}

.order-don .red {
  background: #18c7da;
}

.logcis {
  width: 720rpx;
  padding: 15rpx;
  font-size: 30rpx;
}

.logcis text {
  display: block;
}

.logcis .logtitl {
  font-size: 32rpx;
}

.logcis .item {
  padding: 10rpx 0;
}

.logcis .itembtm {
  font-size: 28rpx;
  color: #777;
}

.order-det {
  width: 720rpx;
  padding: 15rpx;
  position: relative;
  border-bottom: 5px solid #f5f5f5;
  border-top: 5px solid #f5f5f5;
}

.order-det image {
  width: 80rpx;
  height: 80rpx;
}

.orderpro {
  position: absolute;
  left: 130rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  font-size: 30rpx;
}

.orderpro text {
  display: block;
  line-height: 1.5;
}

.orderpro  .payprice {
  position: absolute;
  right: -265rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #18c7da;
}

.order-info .item {
  font-size: 30rpx;
  line-height: 2;
  display: block;
}

.order-info {
  width: 735rpx;
  padding-left: 15rpx;
  padding-bottom: 80rpx;
}

.order-pay {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 10rpx 0;
}

.order-pay .item {
  display: block;
  float: right;
  width: 25%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  margin-left: 15rpx;
  -webkit-border-adius: 2px;
  border-radius: 2px;
}

.order-pay .left {
  background:#18c7da;
  color: #fff;
}

.order-pay .right {
  background: #f3f3f3;
  color: #333;
}
