/* pages/user/coupon/index.wxss */

.swiper-box {
  width: 100%;
}

.swiper-tab {
  display: -webkit-flex;
  display: flex;
  width: 100%;
  border-bottom: 5px solid #f5f5f5;
}

.swiper-tab-item {
  -webkit-flex: 1;
  flex: 1;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  position: relative;
}

.swiper-tab .active {
  color: #f37d6a;
}

.swiper-tab .active::after {
  display: block;
  content: "";
  width: 40%;
  height: 2px;
  background: #f37d6a;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  bottom: 0;
}

.emptynone {
  font-size: 32rpx;
  text-align: center;
  color: #999;
  margin: 80rpx 100rpx 0;
  padding-top: 250rpx;
  background: url(data:image/png;base64,) no-repeat 50% 0;
  background-size: 200rpx 200rpx;
}

.expired {
  margin: 20rpx 10rpx;
}

.coupon-wrap {
  background: #d8d8d8 url(data:image/png;base64,)no-repeat 0;
  background-size: 180rpx 180rpx;
  height: 180rpx;
  padding-left: 200rpx;
  position: relative;
  color: #fff;
  text-align: left;
}

.coupon-price {
  position: absolute;
  color: #333;
  font-size: 50rpx;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  transform: translateY(-50%);
}

.coupon-price .span {
  color: #f00;
  display: block;
  font-size: 32rpx;
  text-align: center;
}

.coupon-name {
  font-size: 32rpx;
  padding-top: 45rpx;
  color: #333;
}

.coupon-time {
  font-size: 30rpx;
  color: #333;
  padding-top: 10rpx;
}

.coupon-desc {
  text-align: left;
  color: #bbb;
  font-size: 30rpx;
  line-height: 1.4;
  padding: 8px;
  border: 1px solid #dfdfdf;
  border-top: 0;
}
