/* pages/message/index.wxss */

page {
  background: #f8f8f8;
}

.container {
  margin: 0;
  padding: 0;
}

.newsbox {
  min-height: 1334rpx;
  width: 680rpx;
  float: right;
  border-left: 4rpx solid #f1f1f1;
  padding-left: 20rpx;
}

.newsbox .item {
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  text-align: left;
  position: relative;
}

.newsbox .title {
  font-size: 32rpx;
  padding-top: 15rpx;
  display: block;
}

.newsbox .datatiem {
  font-size: 28rpx;
  padding-top: 15rpx;
  color: #777;
}

.newsbox .item::before {
  display: block;
  content: '';
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  left: -27rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  -webkit-border-radius: 50%;
  border-radius: 50%;
  background: #ff6700;
}
